<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.main.">

    <EditText
        android:id="@+id/et_page2_inputTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:hint="제목"/>
    <EditText
        android:id="@+id/et_page2_inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_page2_inputTitle"
        android:layout_marginTop="30dp"
        android:hint="이름"/>
    <Button
        android:id="@+id/bt_page2_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_page2_inputName"
        android:layout_marginTop="100dp"
        android:text="저장"/>

</androidx.constraintlayout.widget.ConstraintLayout>